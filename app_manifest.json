{
    "display_information": {
        "name": "Emoji Handler"
    },
    "features": {
        "bot_user": {
            "display_name": "Emoji Handler",
            "always_online": false
        }
    },
    "oauth_config": {
        "scopes": {
            "user": [
                "auditlogs:read",
                "admin.teams:write"
            ],
            "bot": [
                "emoji:read",
                "chat:write"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "emoji_changed"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": true,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}